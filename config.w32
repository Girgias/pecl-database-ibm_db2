ARG_WITH("ibm_db2", "Native support for IBM DB2", "no");

if (PHP_IBM_DB2 != "no") {
	if (CHECK_LIB("db2cli.lib", "ibm_db2")) {
		EXTENSION("ibm_db2", "ibm_db2.c");
		CHECK_HEADER_ADD_INCLUDE('sql.h', 'CFLAGS_IBM_DB2');
		CHECK_HEADER_ADD_INCLUDE('sqlext.h', 'CFLAGS_IBM_DB2');
		CHECK_HEADER_ADD_INCLUDE('sqlcli1.h', 'CFLAGS_IBM_DB2');
		ADD_FLAG('CFLAGS_IBM_DB2', "/I ..\\pecl");
	}
}

